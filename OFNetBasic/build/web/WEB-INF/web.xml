<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>servelets.AddComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddVote</servlet-name>
        <servlet-class>servelets.AddVote</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddReply</servlet-name>
        <servlet-class>servelets.AddReply</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMessage</servlet-name>
        <servlet-class>servelets.AddMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFavourite</servlet-name>
        <servlet-class>servelets.AddFavourite</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFile</servlet-name>
        <servlet-class>servelets.AddFile</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>DeleteFile</servlet-name>
        <servlet-class>servelets.DeleteFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadFile</servlet-name>
        <servlet-class>servelets.DownloadFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>servelets.DeleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePost</servlet-name>
        <servlet-class>servelets.DeletePost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/AddComment.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>servelets.AddPost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/AddPost.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>servelets.CreateAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccount.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginProcess</servlet-name>
        <servlet-class>servelets.LoginProcess</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginProcess</servlet-name>
        <url-pattern>/LoginProcess.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servelets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVote</servlet-name>
        <url-pattern>/AddVote.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddReply</servlet-name>
        <url-pattern>/AddReply.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMessage</servlet-name>
        <url-pattern>/AddMessage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFavourite</servlet-name>
        <url-pattern>/AddFavourite.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFile</servlet-name>
        <url-pattern>/AddFile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFile</servlet-name>
        <url-pattern>/DeleteFile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadFile</servlet-name>
        <url-pattern>/DownloadFile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/DeleteUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePost</servlet-name>
        <url-pattern>/DeletePost.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
