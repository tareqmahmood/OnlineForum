<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>servelets.CreateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowRecent</servlet-name>
        <servlet-class>servelets.ShowRecent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowFavourite</servlet-name>
        <servlet-class>servelets.ShowFavourite</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>servelets.AddPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowPost</servlet-name>
        <servlet-class>servelets.ShowPost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccount.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowRecent</servlet-name>
        <url-pattern>/ShowRecent.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowFavourite</servlet-name>
        <url-pattern>/ShowFavourite.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/AddPost.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowPost</servlet-name>
        <url-pattern>/ShowPost.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
